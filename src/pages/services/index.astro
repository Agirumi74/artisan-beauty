          <div class={`card-luxury-featured group hover:scale-105 transition-all duration-500 animate-luxury-scale-in`} style={`animation-delay: ${index * 0.1}s;`}>
            {/* Service Image */}
            <div class="relative overflow-hidden rounded-t-xl">
              {service.image ? (
                <img 
                  src={service.image} 
                  alt={service.nom} 
                  class="w-full h-56 object-cover group-hover:scale-110 transition-transform duration-500" 
                  loading="lazy" 
                />
              ) : (
                <div class="h-56 flex items-center justify-center bg-luxury-champagne text-luxury-taupe">
                  <div class="text-center">
                    <div class="text-4xl mb-2">üíÑ</div>
                    <div class="text-sm">Service {service.nom}</div>
                  </div>
                </div>
              )}
              
              {/* Floating Price Badge */}
              <div class="absolute top-4 right-4 bg-luxury-primary text-white px-3 py-1 rounded-full text-sm font-medium shadow-luxury-soft">
                {service.prix} ‚Ç¨
              </div>
            </div>

            <!-- Service Content -->
            <div class="p-6 flex-1 flex flex-col">
              <div class="flex-1">
                <h3 class="text-title font-heading text-luxury-primary mb-3 group-hover:text-luxury-secondary transition-colors">
                  {service.nom}
                </h3>
                
                <div class="flex gap-2 mb-4">
                  {service.categorie && (
                    <span class="px-3 py-1 bg-luxury-gold-accent text-luxury-charcoal text-xs uppercase tracking-wider rounded-full">
                      {service.categorie}
                    </span>
                  )}
                  {service.duree && (
                    <span class="px-3 py-1 bg-luxury-rose-accent text-luxury-charcoal text-xs uppercase tracking-wider rounded-full">
                      {service.duree}
                    </span>
                  )}
                </div>
                
                <p class="text-luxury-taupe mb-6 line-clamp-3 leading-relaxed">
                  {service.description}
                </p>
              </div>
              
              <!-- Service Action -->
              <div class="mt-auto">
                <a 
                  href={`/services/${service.slug}`} 
                  class="btn-luxury-secondary w-full group-hover:bg-luxury-primary group-hover:text-white transition-all duration-300"
                >
                  D√©couvrir ce service
                </a>
              </div>
            </div>

            <!-- Service Reviews Summary -->
            <div class="px-6 pb-6">
              <ServiceAvisSummary serviceId={service.id} />
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Section Avis sur nos services (carousel global) */}

  <section class="section-luxury py-16">
