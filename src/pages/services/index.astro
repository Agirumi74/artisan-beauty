      <div class="text-center mb-16">
        <div class="font-accent text-luxury-primary uppercase tracking-widest text-sm mb-4">
          Questions fr√©quentes
        </div>
        <h2 class="text-display font-heading text-luxury-primary mb-6">
          Tout savoir sur
          <span class="block text-luxury-secondary">nos services</span>
        </h2>
      </div>
      <ServicesFaqList faqs={allServiceFaqs} />
    </div>
  </section>


  {/* CTA final */}
