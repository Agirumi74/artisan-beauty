  allServiceAvis = db.prepare('SELECT * FROM avis WHERE servicesGlobal = 1 ORDER BY id ASC').all();
  allServiceImages = db.prepare('SELECT * FROM galerie WHERE servicesGlobal = 1 ORDER BY id ASC').all();
} catch {}
