---
import Alert from './starwind/alert/Alert.astro';
export interface Props { faqs: any[] }
const { faqs = [] } = Astro.props;
---

{faqs.length > 0 ? (
  <div class="space-y-4">
    {faqs.map((f, index) => (
      <details class={`card-luxury hover-lift group animate-luxury-fade-in animate-stagger-${(index % 6) + 1}`}>
        <summary class="p-6 cursor-pointer list-none flex items-center justify-between">
          <div class="flex items-start gap-4 flex-1">
            <div class="w-8 h-8 bg-gradient-luxury-primary rounded-full flex items-center justify-center text-brand-ivory font-heading text-sm flex-shrink-0 mt-1">
              ?
            </div>
            <h3 class="font-accent text-luxury-primary uppercase tracking-wider text-sm leading-relaxed">
              {f.question}
            </h3>
          </div>
          <div class="ml-4 transform transition-transform duration-300 group-open:rotate-180">
            <svg class="w-5 h-5 text-luxury-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </div>
        </summary>
        <div class="px-6 pb-6">
          <div class="ml-12 pt-4 border-t border-luxury">
            <p class="font-body text-luxury-dark leading-relaxed">
              {f.reponse}
            </p>
          </div>
        </div>
      </details>
    ))}
  </div>
) : (
  <div class="card-luxury p-8 text-center">
    <div class="w-16 h-16 bg-gradient-luxury-primary rounded-full flex items-center justify-center mx-auto mb-4">
      <span class="text-2xl">❓</span>
    </div>
    <h3 class="font-heading text-luxury-primary text-lg mb-2">Aucune question fréquente</h3>
    <p class="font-body text-luxury-light text-sm">
      Les questions les plus courantes apparaîtront bientôt ici.
    </p>
  </div>
)}
