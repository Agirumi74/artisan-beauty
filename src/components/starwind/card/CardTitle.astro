---
import type { HTMLAttributes } from "astro/types";
import { tv } from "tailwind-variants";

interface Props extends HTMLAttributes<"div"> {
	variant?: "default" | "luxury" | "luxury-featured";
	size?: "sm" | "md" | "lg";
}

const cardTitle = tv({
	base: "leading-none font-semibold tracking-tight",
	variants: {
		variant: {
			default: "text-3xl",
			luxury: "font-heading text-brand-charcoal",
			"luxury-featured": "font-heading text-brand-gold-primary",
		},
		size: {
			sm: "text-lg",
			md: "text-xl lg:text-2xl",
			lg: "text-2xl lg:text-3xl",
		},
	},
	defaultVariants: {
		variant: "default",
		size: "lg",
	},
});

const { variant, size, class: className, ...rest } = Astro.props;
---

<div class={cardTitle({ variant, size, class: className })} {...rest}>
	<slot />
</div>
