---
import type { HTMLAttributes } from "astro/types";
import { tv } from "tailwind-variants";

interface Props extends HTMLAttributes<"div"> {
	variant?: "default" | "luxury" | "luxury-featured";
}

const cardDescription = tv({
	base: "text-base leading-relaxed",
	variants: {
		variant: {
			default: "text-muted-foreground",
			luxury: "text-brand-taupe font-body",
			"luxury-featured": "text-brand-charcoal font-body",
		},
	},
	defaultVariants: {
		variant: "default",
	},
});

const { variant, class: className, ...rest } = Astro.props;
---

<div class={cardDescription({ variant, class: className })} {...rest}>
	<slot />
</div>
