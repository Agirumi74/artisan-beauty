import Alert from './starwind/alert/Alert.astro';
export interface Props { avis: any[] }
const { avis = [] } = Astro.props;

// Generate user avatars with initials
function generateUserAvatar(name: string) {
  const initials = name?.split(' ').map(n => n.charAt(0)).join('').toUpperCase() || 'AB';
  const colors = ['#C9A96E', '#D4A574', '#B08D57', '#B8956A', '#CD7F32'];
  const bgColor = colors[Math.abs(name?.charCodeAt(0) || 0) % colors.length];
  return { initials, bgColor };
}

// Generate star rating component
function generateStarRating(rating: number) {
  const stars = [];
  for (let i = 1; i <= 5; i++) {
    stars.push(i <= rating ? 'â˜…' : 'â˜†');
  }
  return stars.join('');
}
