---
import Alert from './starwind/alert/Alert.astro';
let avis = [];
let loading = true;
try {
  // On r√©cup√®re tous les avis li√©s √† une formation (formationsGlobal=1 ou formationId non nul)
  const res = await fetch('/api/avis-db?formationsGlobal=1');
  if (res.ok) {
    avis = await res.json();
  }
} catch {}
loading = false;
---
{!loading && avis.length > 0 ? (
  <div class="w-full overflow-x-auto py-2">
    <div class="flex gap-6 min-w-full pb-4">
      {avis.map((a: { utilisateur?: string; nom?: string; commentaire: string; note: number }, index: number) => (
        <div class={`card-luxury hover-lift p-6 min-w-[320px] max-w-xs flex-shrink-0 animate-luxury-fade-in animate-stagger-${(index % 6) + 1}`}>
          <div class="flex items-start gap-4 mb-4">
            <div class="w-12 h-12 bg-gradient-luxury-primary rounded-full flex items-center justify-center text-brand-ivory font-heading text-lg flex-shrink-0">
              {(a.utilisateur || a.nom || 'U').charAt(0).toUpperCase()}
            </div>
            <div class="flex-1">
              <h3 class="font-accent text-luxury-primary uppercase tracking-wider text-sm mb-1">
                {a.utilisateur || a.nom || 'Utilisateur anonyme'}
              </h3>
              <div class="flex items-center gap-1 mb-2">
                {[...Array(5)].map((_, i) => (
                  <span class={`text-lg ${i < (a.note || 0) ? 'text-luxury-primary' : 'text-luxury-light'}`}>
                    ‚≠ê
                  </span>
                ))}
                <span class="ml-2 text-sm font-body text-luxury-light">
                  {a.note || 0}/5
                </span>
              </div>
            </div>
          </div>
          <blockquote class="font-body text-luxury-dark leading-relaxed italic">
            "{a.commentaire || 'Aucun commentaire'}"
          </blockquote>
          <div class="mt-4 pt-4 border-t border-luxury">
            <div class="text-xs font-accent text-luxury-light uppercase tracking-wider">
              Avis v√©rifi√© ‚Ä¢ Formation
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
) : (!loading && avis.length === 0) ? (
  <div class="card-luxury p-8 text-center">
    <div class="w-16 h-16 bg-gradient-luxury-primary rounded-full flex items-center justify-center mx-auto mb-4">
      <span class="text-2xl">üéì</span>
    </div>
    <h3 class="font-heading text-luxury-primary text-lg mb-2">Aucun avis formation</h3>
    <p class="font-body text-luxury-light text-sm">
      Les avis des formations appara√Ætront bient√¥t ici.
    </p>
  </div>
) : null}
