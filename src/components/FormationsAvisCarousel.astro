---
import Alert from './starwind/alert/Alert.astro';
let avis = [];
let loading = true;

try {
  // On r√©cup√®re tous les avis li√©s √† une formation (formationsGlobal=1 ou formationId non nul)
  const res = await fetch('/api/avis-db?formationsGlobal=1');
  if (res.ok) {
    avis = await res.json();
  }
} catch {}
loading = false;
---

{!loading && avis.length > 0 ? (
  <div class="w-full overflow-x-auto py-4">
    <div class="flex gap-6 min-w-full pb-4">
      {avis.map((a: { utilisateur?: string; nom?: string; commentaire: string; note: number }, index: number) => (
        <div class={`card-luxury hover-lift p-6 min-w-[320px] max-w-xs flex-shrink-0 animate-luxury-slide-in animate-stagger-${(index % 3) + 1}`}>
          <div class="flex items-start gap-4 mb-4">
            <div class="w-10 h-10 bg-gradient-luxury-primary rounded-full flex items-center justify-center text-brand-ivory font-heading text-sm flex-shrink-0">
              {(a.utilisateur || a.nom || 'U').charAt(0).toUpperCase()}
            </div>
            <div class="flex-1">
              <h3 class="font-accent text-luxury-primary uppercase tracking-wider text-xs mb-1">
                {a.utilisateur || a.nom || 'Utilisateur anonyme'}
              </h3>
              <div class="flex items-center gap-1 mb-2">
                {[...Array(5)].map((_, i) => (
                  <span class={`text-sm ${i < (a.note || 0) ? 'text-luxury-primary' : 'text-luxury-light'}`}>
                    ‚≠ê
                  </span>
                ))}
              </div>
            </div>
          </div>
          <blockquote class="font-body text-luxury-dark text-sm leading-relaxed italic">
            "{a.commentaire || 'Aucun commentaire'}"
          </blockquote>
          <div class="mt-3 pt-3 border-t border-luxury">
            <div class="text-xs font-accent text-luxury-light uppercase tracking-wider">
              Formation
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
) : (!loading && avis.length === 0) ? (
  <div class="card-luxury p-6 text-center">
    <div class="w-12 h-12 bg-gradient-luxury-primary rounded-full flex items-center justify-center mx-auto mb-3">
      <span class="text-lg">üéì</span>
    </div>
    <p class="font-body text-luxury-light text-sm">
      Aucun avis √† afficher pour le moment.
    </p>
  </div>
) : null}
